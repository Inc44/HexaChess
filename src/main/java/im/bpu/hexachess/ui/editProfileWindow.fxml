<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20">
	<Label text="%profile.edit.title" styleClass="h2" />
	<VBox alignment="center" maxWidth="300" spacing="10">
		<Label text="%profile.edit.avatar" />
		<TextField fx:id="avatarField" promptText="https://example.com/image.png" />
		<Label text="%profile.edit.location" />
		<TextField fx:id="locationField" />
		<Label text="%profile.edit.email" />
		<TextField fx:id="emailField" />
		<Label text="%profile.edit.newpassword" />
		<PasswordField fx:id="newPasswordField" />
		<Label text="%profile.edit.password" />
		<PasswordField fx:id="passwordField" />
	</VBox>
	<Label fx:id="statusLabel" managed="false" visible="false" styleClass="text-danger" />
	<Button text="%profile.edit.save" onAction="#save" styleClass="success-button" />
	<Button fx:id="backButton" text="%profile.edit.cancel" onAction="#openProfile" />
</VBox>